{
  "extends": ["standard", "plugin:ava/recommended"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true
    }
  },
  "plugins": ["ava", "babel", "import-order"],
  "rules": {
    "babel/arrow-parens": ["error", "as-needed"],
    "import-order/import-order": "error"
  }
}
