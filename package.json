{
  "name": "@novemberborn/as-i-preach",
  "version": "11.0.0",
  "description": "Like standard, but with support for new syntax and AVA rules, to @novemberborn's taste",
  "main": "index.js",
  "bin": {
    "as-i-preach": "cli.js"
  },
  "files": [
    ".eslintrc.js",
    ".typescript.eslintrc.js",
    "cli.js",
    "index.js",
    "options.js",
    "lib"
  ],
  "scripts": {
    "coverage": "nyc npm test",
    "lint": "eslint --ignore-pattern 'test/fixtures/**/*.js' --ignore-path .gitignore .",
    "test": "ava",
    "posttest": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/novemberborn/as-i-preach.git"
  },
  "author": "Mark Wubben (https://novemberborn.net/)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/novemberborn/as-i-preach/issues"
  },
  "homepage": "https://github.com/novemberborn/as-i-preach#readme",
  "dependencies": {
    "arrify": "^1.0.1",
    "babel-eslint": "8.0.2",
    "deglob": "^2.1.0",
    "eslint": "4.11.0",
    "eslint-config-standard": "10.2.1",
    "eslint-formatter-pretty": "^1.1.0",
    "eslint-import-resolver-typescript": "1.0.2",
    "eslint-plugin-ava": "4.2.2",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-node": "5.2.1",
    "eslint-plugin-node-globals": "0.1.0",
    "eslint-plugin-promise": "3.6.0",
    "eslint-plugin-react": "7.4.0",
    "eslint-plugin-security": "1.4.0",
    "eslint-plugin-standard": "3.0.1",
    "eslint-plugin-typescript": "0.8.0",
    "eslint-plugin-unicorn": "3.0.0",
    "has-flag": "^2.0.0",
    "resolve-from": "^4.0.0",
    "standard-engine": "7.1.0",
    "typescript-eslint-parser": "9.0.0"
  },
  "devDependencies": {
    "ava": "^0.23.0",
    "codecov": "^3.1.0",
    "get-stream": "^3.0.0",
    "nyc": "^11.2.1",
    "typescript": "^2.6.1"
  },
  "engines": {
    "node": ">=4"
  },
  "nyc": {
    "cache": true,
    "exclude": [
      "scripts/*",
      "test/**/*"
    ],
    "reporter": [
      "html",
      "lcov",
      "text"
    ]
  }
}
